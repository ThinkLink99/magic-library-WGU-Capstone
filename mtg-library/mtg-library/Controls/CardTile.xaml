<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mtg_library.Controls.CardTile"
             xmlns:models="clr-namespace:mtg_library.Models" 
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:DataType="models:Card">
        <StackLayout>
            <yummy:PancakeView Margin="5" CornerRadius="25, 0, 0, 25">
                <Image Source="{Binding ImageUris.ArtCrop}" 
Aspect="AspectFill" />
            </yummy:PancakeView>
            <yummy:PancakeView Margin="5" Padding="5" CornerRadius="0, 0, 25, 25">
                <Label Text="{Binding Name}" />
            </yummy:PancakeView>
        </StackLayout>
</ContentView>